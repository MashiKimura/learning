<div class="textbook-title">
  <h1>新規会員登録</h1>
</div>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
    <%# error_massages %>
    <%= render 'shared/error_messages', model: f.object %>
    <%# email %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"input-default left-30 user-form-base", id:"email", placeholder:"　PC・携帯どちらでも可", autofocus: true %>
    </div>
    <%# password %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
      </div>
      <%= f.password_field :password, class:"input-default left-30 user-form-base", id:"password", placeholder:"　6文字以上の半角英数字" %>
      <p class='info-text left-30'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <%# password(確認) %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default left-30 user-form-base", id:"password-confirmation", placeholder:"　同じパスワードを入力して下さい" %>
    </div>
    <%# nickname %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
      </div>
      <%= f.text_field :nickname, class:"input-default left-30 user-form-base", id:"nickname", placeholder:"　例) 山田 太郎", maxlength:"40" %>
      <p class='info-text left-30'>※20字以内で入力してください</p>
    </div>
    <%# submit %>
    <div class='register-btn'>
      <%= f.submit "会員登録" ,class:"register-red-btn btn_center" %>
    </div>
  <% end %>
</div>